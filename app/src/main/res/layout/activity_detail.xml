<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vukhachoi.blogapp.Detail">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:cardCornerRadius="10dp"


            android:maxHeight="100dp"

            android:id="@+id/card_view"

            app:cardUseCompatPadding="true"


            android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_toRightOf="@+id/imgStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canh bao"
                android:textStyle="bold"
android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="Regular"
                android:textSize="21dp"
                android:textColor="#000000"
                android:id="@+id/txttitle1"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/spnStatus2"
                android:textAlignment="center"
                android:entries="@array/status"
                android:prompt="@string/country_prompt"
                android:background="@drawable/border_black"
                android:layout_marginLeft="10dp"


                android:layout_marginTop="10dp"></Spinner>
            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/imgdetail"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             android:layout_gravity="center"
                android:adjustViewBounds="true"
                app:srcCompat="@mipmap/ic_launcher" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"

                android:paddingTop="14dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:id="@+id/txtDiscription1"
                android:text="Giet nguoi o ha noi"
                android:fontFamily="Regular"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

</RelativeLayout>
