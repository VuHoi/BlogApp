<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
     android:elevation="10dp"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canh bao"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:fontFamily="Regular"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/txttitle"/>
    <Spinner
        android:layout_below="@+id/txttitle"
        android:layout_width="wrap_content"
        android:id="@+id/spnStatus1"
        android:background="@drawable/border_black"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:entries="@array/status"
        android:prompt="@string/country_prompt"
        android:layout_height="wrap_content"></Spinner>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18dp"
    android:textColor="#000000"
    android:layout_below="@+id/spnStatus1"
    android:padding="10dp"
    android:id="@+id/txtDiscription"
    android:text="Giet nguoi o ha noi"
    android:fontFamily="Regular"
    />
    <ImageView
        android:layout_below="@+id/txtDiscription"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:id="@+id/imgStatus"
        android:src="@drawable/user_image"
        android:paddingRight="10dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
</android.support.v7.widget.CardView>
